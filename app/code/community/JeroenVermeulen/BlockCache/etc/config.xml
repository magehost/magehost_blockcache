<!--suppress XmlUnboundNsPrefix -->
<config>
    <modules>
        <jeroenvermeulen_blockcache>
            <version>1.10.5</version>
        </jeroenvermeulen_blockcache>
    </modules>
    <global>
        <blocks>
            <jeroenvermeulen_blockcache>
                <class>JeroenVermeulen_BlockCache_Block</class>
            </jeroenvermeulen_blockcache>
        </blocks>
        <models>
            <jeroenvermeulen_blockcache>
                <class>JeroenVermeulen_BlockCache_Model</class>
            </jeroenvermeulen_blockcache>
        </models>
        <helpers>
            <jeroenvermeulen_blockcache>
                <class>JeroenVermeulen_BlockCache_Helper</class>
            </jeroenvermeulen_blockcache>
        </helpers>
        <events>
            <controller_front_init_before>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>controllerFrontInitBefore</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </controller_front_init_before>
            <jv_clean_backend_cache>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>cleanBackendCache</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </jv_clean_backend_cache>
            <jv_cache_miss_jv>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>cacheMiss</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </jv_cache_miss_jv>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <jeroenvermeulen_blockcache>
                    <file>jeroenvermeulen/blockcache.xml</file>
                </jeroenvermeulen_blockcache>
            </updates>
        </layout>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>coreBlockAbstractToHtmlBefore</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </core_block_abstract_to_html_before>
            <controller_front_send_response_before>
                <observers>
                    <jeroenvermeulen_blockcache>
                        <type>singleton</type>
                        <class>JeroenVermeulen_BlockCache_Model_Observer</class>
                        <method>controllerFrontSendResponseBefore</method>
                    </jeroenvermeulen_blockcache>
                </observers>
            </controller_front_send_response_before>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <!-- URL:  http://[MAGROOT]/admin/[CONTROLLER]/[ACTION]/key/xxxxxxxxxxx/ -->
                        <JeroenVermeulen_BlockCache after="Mage_Adminhtml">JeroenVermeulen_BlockCache_Adminhtml</JeroenVermeulen_BlockCache>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <jeroenvermeulen_blockcache module="jeroenvermeulen_blockcache">
                    <file>jeroenvermeulen/blockcache.xml</file>
                </jeroenvermeulen_blockcache>
            </updates>
        </layout>
        <menu>
            <system>
                <children>
                    <!-- URL:  http://[MAGROOT]/admin/jv_blockcache/flush/key/xxxxxxxxxxx/ -->
                    <jv_blockcache_flush>
                        <title>JV: Flush URL from Cache</title>
                        <action>adminhtml/jv_blockcache/flush</action>
                        <sort_order>90</sort_order>
                    </jv_blockcache_flush>
                </children>
            </system>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <jv_blockcache_flush>
                                    <title>JV: Flush URL</title>
                                </jv_blockcache_flush>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <jeroenvermeulen_blockcache>
            <general>
                <enable_formkey_fix>1</enable_formkey_fix>
                <cache_when_url_param>0</cache_when_url_param>
                <log_miss>0</log_miss>
            </general>
            <category_page>
                <enable_cache>1</enable_cache>
                <lifetime>604800</lifetime>
                <enable_messages_fix>1</enable_messages_fix>
            </category_page>
            <product_detail>
                <enable_cache>1</enable_cache>
                <lifetime>604800</lifetime>
                <enable_messages_fix>1</enable_messages_fix>
            </product_detail>
            <cms_page>
                <enable_cache>1</enable_cache>
                <lifetime>604800</lifetime>
            </cms_page>
            <layered_navigation>
                <enable_cache>1</enable_cache>
                <lifetime>604800</lifetime>
            </layered_navigation>
            <cms_block>
                <enable_cache>0</enable_cache>
                <lifetime>604800</lifetime>
            </cms_block>
            <custom_1>
                <instanceof></instanceof>
                <enable_cache>0</enable_cache>
                <lifetime>604800</lifetime>
            </custom_1>
            <custom_2>
                <instanceof></instanceof>
                <enable_cache>0</enable_cache>
                <lifetime>604800</lifetime>
            </custom_2>
            <custom_3>
                <instanceof></instanceof>
                <enable_cache>0</enable_cache>
                <lifetime>604800</lifetime>
            </custom_3>
            <custom_4>
                <instanceof></instanceof>
                <enable_cache>0</enable_cache>
                <lifetime>604800</lifetime>
            </custom_4>
            <custom_5>
                <instanceof></instanceof>
                <enable_cache>0</enable_cache>
                <lifetime>604800</lifetime>
            </custom_5>
            <flushes>
                <_log>0</_log>
                <catalog_category>1</catalog_category>
                <catalog_product>1</catalog_product>
                <cms_page>1</cms_page>
                <cms_block>1</cms_block>
                <translate>0</translate>
                <store>0</store>
                <website>0</website>
                <block_html>0</block_html>
                <mage>0</mage>
                <_without_tags>0</_without_tags>
            </flushes>
            <cache_warmer>
                <user_agent>Cache Warmer</user_agent>
                <refresh_on_visit>1</refresh_on_visit>
            </cache_warmer>
        </jeroenvermeulen_blockcache>
    </default>
</config>